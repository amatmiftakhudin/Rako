<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miftakhudin.rako.SettingsActivity"
    android:background="#1f11ff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/default_avatar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/settings_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:layout_below="@+id/settings_image"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:id="@+id/settings_display_name"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi There"
        android:id="@+id/settings_status"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/settings_display_name"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_change_image"
        android:layout_below="@+id/settings_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="#ffffff"
        android:text="Change Image"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_change_status"
        android:layout_below="@+id/button_change_image"
        android:layout_centerHorizontal="true"
        android:text="Change Status"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"/>
</RelativeLayout>
